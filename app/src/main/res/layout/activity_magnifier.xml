<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fitsSystemWindows="true">


    <TextureView
        android:id="@+id/preview_surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="100dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="50dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ic_camera_flash"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_flash_img_close_icon" />

                <ImageView
                    android:id="@+id/ic_camera_switch"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_camera_picker_img_icon" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/seekbar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ic_seekbar_down"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_seekbar_down_icon" />

                <SeekBar
                    android:id="@+id/ic_seekbar"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="8"
                    android:focusable="true"
                    android:max="100"
                    android:maxHeight="1dp"
                    android:minHeight="1dp"
                    android:layout_gravity="center"
                    android:progressDrawable="@drawable/seekbar_define_style"/>

                <ImageView
                    android:id="@+id/ic_seekbar_up"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_seekbar_up_icon" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>